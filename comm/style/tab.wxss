page{
    background-color: #fcfcfc;
}

.tab-header {
    box-sizing: border-box;
    height: 80rpx;
    background: #fff;
    border-bottom: 1px solid #eee;
}

.tab-header-item {
   display: block;
   width: 33%;
   height: 77rpx;
   line-height: 76rpx;
   text-align: center;
   float: left;
   font-size: 30rpx;
}
.tab-header-item .tab-header-item-rightimage{
    display: inline-block;
    width: 30rpx;
    height: 30rpx;
    position: relative;
    top: 6rpx;
    left: 20rpx;
}
.tab-header-active {
    border-bottom: 4rpx solid #47a86c;
}

.tab-content {
    margin-top: 10rpx;
}

.tab-content-item {
    box-sizing: border-box;
    padding: 30rpx;
    background:#f6f6f6;
}