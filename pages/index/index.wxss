page{
  background:#f2f2f2;
}
.container{
  background: #fff;
  margin: 80px 20px 20px;
  padding: 50px 10px 20px;
  position: relative;
  border-radius: 4px;
}
.logo{
  position: absolute;
  top: -40px;
  width: 80px;
}
.item{
  overflow: hidden;
  font-size: 16px;
  color: #666;
}
.item-title{
  float: left;
}
.item-input{
  float: left;
}
.item-pay{
  font-size: 14px;
}
.btn{
  font-size: 16px;
}
.call{
  display: block;
  width: 100%;
  font-size: 16px;
  text-align: center;
}
.footer{
  position:fixed;
  bottom:0px;
  height:60px;
  left:0px;
  right:0px;
  background:#fff;
  display:flex;
  flex-direction:row;
}
.tab{
  flex:1;
  font-size: 16px;
}
