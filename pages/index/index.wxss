page{
  background:#f3f3f3;
}
.cover{
  position:absolute;
  top: 0px;
  bottom: 0px;
  left: 0px;
  right: 0px;
  background: rgba(0,0,0,0.4);
  z-index: 99;
  display: none;
}
.alert-market{
  position: relative;
  background: #fff;
  margin: 288rpx 40rpx 0rpx;
  border-radius: 4rpx;
  padding: 0rpx 30rpx;
}
.alert-close{
  position: absolute;
  top: 30rpx;
  right: 20rpx;
  width: 30rpx;
  height: 30rpx;
  background-image:url(data:image/png;base64,);
  background-size: 100% 100%;
}
.market-title{
  font-size: 30rpx;
  padding: 30rpx 0px;
  text-align: center;
  color: #3098f9;
}
.market-item{
  font-size: 28rpx;
  display: flex;
  padding: 15rpx;
  background: #f6f5f6;
  border-radius: 4rpx;
  margin-bottom: 18rpx;
}
.market-item-txt{
  display: block;
  height: 38rpx;
  line-height: 38rpx;
  color: #666;
}
.market-item-input{
  height: 38rpx;
}
.market-item-input input{
  margin-top: -6rpx;
}
.market-hint{
  color: #c6c6c6;
  font-size: 24rpx;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
}
.market-img{
  margin: 0rpx auto 20rpx;
  width: 360rpx;
  height: 240rpx;
  background: #f6f5f6;
  border: 1px solid #f6f5f6;
  background-size:100% 100%;
}
.market-img-btn{
  width: 100rpx;
  height: 100rpx;
  background-image:url(data:image/png;base64,);
  background-size: 100% 100%;
  margin:30rpx auto;
}
.market-img-hint{
  font-size: 26rpx;
  color: #666;
  text-align: center;
}
.market-btn{
  display: flex;
  padding-bottom: 20rpx;
}
.market-btn button{
  width: 200rpx;
  color: #fff;
  font-size: 30rpx;
  border: none;
}
.market-btn button.market-btn-close{
  background: #cccccc;
}
.market-btn button.market-btn-submit{
  background: #e33f3f;
}
/*主内容  */
view{
  box-sizing:border-box;
}
.container{
  background: #fff;
  margin: 120rpx 40rpx 40rpx;
  padding: 100rpx 10rpx 40rpx;
  position: relative;
  border-radius: 8rpx;
  box-shadow: 0 1px 6px rgba(0, 0, 0, 0.2);
}
.logo{
  position: absolute;
  top: -80rpx;
  width: 160rpx;
  height:160rpx;
  padding:10rpx;
  background:#fff;
  border-radius: 100%;
}
.logo image{
  width:100%;
  height:100%;
  border-radius: 100%;
}
.item{
  overflow: hidden;
  font-size: 32rpx;
  color: #666;
  padding:20rpx 0px;
  box-sizing:border-box;
  width:600rpx;
  margin:0px auto;
}
.item-recommand{
  font-size:24rpx;
}
.item-recommand-text,.item-recommand-btn{
  float:left;
}
.item-recommand-text{
  padding-top: 4rpx;
}
.item-recommand-btn{
  padding:5rpx 8rpx 5rpx 10rpx;
  color:#c39554;
  border-radius:8rpx;
  font-size: 24rpx;
  border: 1px solid #ddd;
  margin-left: 10rpx;
}
.item-title{
  float: left;
  font-size:32rpx;
  color:#333;
  font-weight:bold;
  width:200rpx;
  height:50rpx;
  line-height: 50rpx;
}
.item-input{
  float: left;
  width:340rpx;
  font-size:26rpx;
  overflow:hidden;
  margin-right: 10rpx;
}
.item-count{
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.item-check{
  font-size: 28rpx;
  color: #999;
  margin: 20rpx auto 10rpx;
}
.item-check checkbox{
  zoom:65%;
  display:block;
  float:left;
}
.item-input text{
  float:left;
  line-height:40rpx;
}
.item-input input{
  border-bottom:1rpx solid #ddd;
  padding-left: 10rpx;
}
.item-pay{
  color:#999;
  font-size: 28rpx;
  text-align:center;
  margin-top: 20rpx;
}
.item-marketing{
  color: #3098f9;
}
.btn{
  font-size: 32rpx;
  margin:20rpx 0rpx;
  background:#d45149;
  width:80%;
  color:#fff;
  border-radius:40rpx;
}
.call{
  display: block;
  width: 100%;
  font-size: 24rpx;
  text-align: center;
  color:#586c94;
  margin-top:80rpx;
}
.footer{
  position:fixed;
  bottom:0px;
  height:100rpx;
  left:0px;
  right:0px;
  background:#fff;
  display:flex;
  flex-direction:row;
}
.tab{
  flex:1;
  font-size: 24rpx;
  color:#666;
  text-align:center;
}
.tab-logo{
  width:25%;
  margin:8rpx auto 0rpx;
}
.tab-text{
  margin-bottom:5rpx;
}
.tab-logo image{
  width:100%;
}
